  {
    "name": "Collage with text",
    "class": "index-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image1",
        "label": "Image 1"
      },
	  {
        "type": "image_picker",
        "id": "image2",
        "label": "Image 2"
      },
      {
        "type": "image_picker",
        "id": "image3",
        "label": "Image 3"
      },
      {
        "type": "image_picker",
        "id": "image4",
        "label": "Image 4"
      },
      {
        "type": "range",
        "id": "image_width1",
        "label": "Image width 1",
        "default": 500,
        "min": 100,
        "max": 580,
        "step": 10,
        "unit": "px"
      },
	  {
        "type": "range",
        "id": "image_width2",
        "label": "Image width 2",
        "default": 500,
        "min": 100,
        "max": 580,
        "step": 10,
        "unit": "px"
      },
	  {
        "type": "range",
        "id": "image_width3",
        "label": "Image width 3",
        "default": 500,
        "min": 100,
        "max": 580,
        "step": 10,
        "unit": "px"
      },
      	  {
        "type": "range",
        "id": "image_width4",
        "label": "Image width 4",
        "default": 500,
        "min": 100,
        "max": 580,
        "step": 10,
        "unit": "px"
      },
      {
